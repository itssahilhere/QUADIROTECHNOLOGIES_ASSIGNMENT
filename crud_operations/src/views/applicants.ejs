<section class="applicants">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mt-5 mb-4 text-center" style="color: #7bb254;">Applicants List</h1>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-success" style="margin-top: 1em;">
                        <thead>
                            <tr>
                                <!-- <th scope="col">Job-ID</th> -->
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Contact</th>
                                <th scope="col">Resume</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% applicants.forEach(applicant => { %>
                                <tr>
                                    <!-- <th style="vertical-align: middle"><%= applicant.jobId %></th> -->
                                    <th style="vertical-align: middle"><%= applicant.id %></th>
                                    <td style="vertical-align: middle"><%= applicant.name %></td>
                                    <td style="vertical-align: middle"><%= applicant.email %></td>
                                    <td scope="col" style="vertical-align: middle"><%= applicant.contact %></td>
                                    <td style="vertical-align: middle">
                                        <% if (applicant.resume) { %>
                                            <!-- <a href="<%= applicant.resume %>">Download</a> -->
                                            <embed src="<%= applicant.resume %>" type="application/pdf" width="100%" height="150px" />
                                        <% } else { %>
                                            No resume uploaded
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>   
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>